<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/item_border"
    >

    <TextView
        android:id="@+id/txt_course"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CIMA"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:background="@color/primary"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        fancy:layout_constraintTop_toBottomOf="@+id/txt_subject"
        fancy:layout_constraintRight_toLeftOf="@+id/txt_level"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/txt_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Certificate Level"
        android:background="@color/green"
        android:textColor="@color/white"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        tools:text="Certificate Level"
        android:layout_marginTop="0dp"
        android:layout_marginRight="16dp"
        fancy:layout_constraintRight_toRightOf="parent"
        fancy:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        fancy:layout_constraintTop_toTopOf="@+id/txt_course"
        fancy:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="BA1 - Fundamentals of business economics"
        android:textSize="18sp"
        android:textColor="@color/primary"
        android:textAlignment="center"

        android:layout_marginRight="8dp"
        fancy:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        fancy:layout_constraintLeft_toLeftOf="parent"
        fancy:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>
